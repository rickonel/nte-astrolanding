---
import { Image } from "astro:assets";
import { slogans } from "../content/slogans";
import astronautImage from "~/assets/astronaut.png";
import Powder from "~/components/powder.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <Powder />
  <div id="powder-bg-fallback" class="absolute inset-0 hidden opacity-40">
  </div>
  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <div
      class="flex flex-col items-center justify-center gap-2 sm:gap-4 w-full"
      style="grid-column: 1 / -1;"
    >
      <div
        class="text-center tracking-tighter text-xs md:text-base"
        style="color: #fbfbfbff;"
      >
        <span id="slogan-text">Suplementos deportivos para potenciar tu rendimiento...</span>
      </div>
      <div
        class="text-center font-extrabold tracking-tighter text-6xl md:text-8xl"
        style="color: #ffffffff;"
      >
        NUTRE TU ESFUERZO
      </div>
        <div class="w-full flex justify-center pt-8">
          <a href="https://elyerromenu.com/b/nutre-tu-esfuerzo" target="_blank" rel="noopener">
              <img src="/ntelogo.png" alt="NTE logofork" class="w-36 h-36" />
          </a>
        </div>
    </div>
<script>
  import { slogans } from "../content/slogans";
  const slogansList = slogans;
  let sloganIndex = Math.floor(Math.random() * slogansList.length);
  function setSlogan() {
    document.getElementById('slogan-text').textContent = slogansList[sloganIndex];
    sloganIndex = Math.floor(Math.random() * slogansList.length);
  }
  setInterval(setSlogan, 5000);
</script>
  <!-- Cartel principal movido arriba, junto al slogan -->
  <!-- Imagen eliminada -->
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #supplement {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #supplement {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
  ::selection {
    background: var(--color-red);
    color: white;
  }
</style>
