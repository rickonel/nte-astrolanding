---
import CompatibilityList from "~/components/compatibility-list.astro";
import ContentSection from "~/components/content-section.astro";
import type { CompatibilityItem } from "~/types";

const frameworks: Array<CompatibilityItem> = [
  {
    title: "Proteínas",
  icon: "",
    url: "#proteinas",
  },
  {
    title: "Creatinas",
  icon: "",
    url: "#creatinas",
  },
  {
    title: "Aminoácidos",
  icon: "",
    url: "#aminoacidos",
  },
  {
    title: "Vitaminas",
  icon: "",
    url: "#vitaminas",
  },
  {
    title: "Pre-entrenos",
  icon: "",
    url: "#preentrenos",
  },
  {
    title: "Accesorios",
  icon: "",
    url: "#accesorios",
  },
];

const platforms: Array<CompatibilityItem> = [
  {
    title: "Pago con tarjeta",
  icon: "",
    url: "#pago-tarjeta",
  },
  {
    title: "Transferencia bancaria",
  icon: "",
    url: "#transferencia",
  },
  {
    title: "Pago en efectivo",
  icon: "",
    url: "#efectivo",
  },
  {
    title: "Envío nacional",
  icon: "",
    url: "#envio-nacional",
  },
  {
    title: "Recoge en tienda",
