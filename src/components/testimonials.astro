---
import { getCollection } from "astro:content";
import ContentSection from "~/components/content-section.astro";
import TestimonialsCard from "~/components/testimonials-card.astro";

const featuredSites = await getCollection(
  "showcase",
  ({ data }) => "featured" in data,
);
const orderedSites = featuredSites.sort(
  (a, b) => a.data.featured! - b.data.featured!,
);
---

<ContentSection title="Testimonios" id="testimonios" class="">
  <Fragment slot="lead">
  <div class="mx-auto max-w-5xl text-lg" style="line-height:1.7;">
      Historias de <span style="color:var(--color-red);">clientes</span> que confiaron en NTE. <span style="color:var(--color-red);">Insp√≠rate</span> y alcanza tus metas deportivas con nuestros suplementos.
    </div>
  </Fragment>
  <style>
    #testimonials {
      margin-top: 3rem;
      margin-bottom: 3rem;
      padding: 2rem 0;
    }
    #testimonials .section-title {
      font-size: 1.2rem;
      margin-bottom: 2rem;
      letter-spacing: 0.02em;
    }
    #testimonials .mx-auto {
      padding: 2rem 1rem;
      background: var(--color-white);
      border-radius: 1.5rem;
      box-shadow: 0 2px 24px 0 rgba(0,0,0,0.04);
      margin-left: 1em;
      margin-right: 1em;
    }
    #testimonials ul {
      margin: 1.5em 0 1em 2em !important;
      padding-left: 0;
      list-style: none;
      display: flex;
      flex-wrap: wrap;
      gap: 2em;
      justify-content: center;
    }
    #testimonials ul li {
      margin-bottom: 1.1em;
      padding: 1.5em 1.5em;
      position: relative;
      font-size: 1.05em;
      background: var(--color-white);
      border-radius: 0;
      box-shadow: 0 2px 12px 0 rgba(0,0,0,0.03);
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5em;
    }
    #testimonials ul li:before {
      content: '';
      display: inline-block;
      width: 0.5em;
      height: 0.5em;
      background: var(--color-red);
      border-radius: 50%;
      margin-right: 0.7em;
      vertical-align: middle;
    }
    #testimonials .testimonial-icon {
      width: 40px;
      height: 40px;
      margin-bottom: 0.5em;
      color: var(--color-red);
    }
    #testimonials .testimonial-img {
      width: 80px;
      height: 80px;
      object-fit: contain;
      margin-bottom: 0.5em;
      border-radius: 1em;
      background: #f8f8f8;
      box-shadow: 0 2px 8px 0 rgba(0,0,0,0.03);
    }
    ::selection {
      background: var(--color-red);
      color: white;
    }
  </style>
  <div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {orderedSites.map((site) => <TestimonialsCard site={site} />)}
    </div>
    <p class="text-right text-sm">
    </p>
  </div>
</ContentSection>
