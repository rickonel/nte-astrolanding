---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
---

  <style>
    .section-title {
      font-size: 2rem;
      font-weight: 800;
      margin-top: 2rem;
      margin-bottom: 2rem;
      padding: 2rem;
      color: var(--color-red);
      letter-spacing: -0.02em;
    }
    section {
      margin-top: 3rem;
      margin-bottom: 3rem;
      padding: 1rem 1.5rem;
      background: var(--color-white);
      box-shadow: 0 2px 24px 0 rgba(0,0,0,0.04);
    }
  </style>

<section
  id={id}
  class="flex scroll-mt-24 flex-col items-center gap-4 space-y-8"
>
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
  class="text-center font-extrabold tracking-tight text-6xl"
  style="color:var(--color-red);"
    >
      {title}
    </h2>
  </div>
  <p class="max-w-xl text-center font-extrabold text-2xl">
    <slot name="lead" />
  </p>
  <slot />
</section>
