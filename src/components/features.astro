---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Variedad de suplementos",
    description:
      "Proteínas, creatinas, aminoácidos, vitaminas y más para cada objetivo deportivo.",
    icon: "mdi:bottle-tonic-plus",
  },
  {
    title: "Envíos rápidos",
    description:
      "Recibe tus productos en tiempo récord en todo el país.",
    icon: "mdi:truck-fast",
  },
  {
    title: "Asesoría personalizada",
    description:
      "Te ayudamos a elegir el suplemento ideal según tus metas y necesidades.",
    icon: "mdi:account-heart",
  },
  {
    title: "Pago seguro",
    description:
      "Aceptamos tarjetas, transferencias y pagos en efectivo de forma segura.",
    icon: "mdi:credit-card-check",
  },
  {
    title: "Calidad garantizada",
    description:
      "Solo trabajamos con marcas reconocidas y productos certificados.",
    icon: "mdi:shield-check",
  },
  {
    title: "Comunidad NTE",
    description:
      "Únete a nuestra comunidad y comparte tu progreso con otros atletas.",
    icon: "mdi:account-group",
    icon: "mdi:account-group",
  },
];
---

<ContentSection title="Features" id="features">
  <Fragment slot="lead">
    Astro comes <span class="text-primary">batteries included</span>. It takes
    the best parts of
    <span class="text-primary">state-of-the-art</span>
    tools and adds its own <span class="text-primary">innovations</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <!-- icon removed -->
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
