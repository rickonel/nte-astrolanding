---
import { Image } from "astro:assets";
import moonImage from "~/assets/moon.jpg";

const widths = [450, 800, 1200];
const sizes = "100vw";
---

<section class="hero flex flex-col items-center justify-center py-12">
  <h1 class="text-4xl font-extrabold text-[color:var(--color-primary)] mb-4">Bienvenido a NTE</h1>
  <p class="text-lg text-center mb-6">Suplementos deportivos para potenciar tu rendimiento.</p>
  <Image
    class="h-full w-full object-cover rounded-lg shadow-lg"
    src={moonImage}
    widths={widths}
    sizes={sizes}
    alt="Suplementos deportivos NTE"
  />
</section>
